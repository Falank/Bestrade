@{
    ViewBag.Title = "Pack Remark";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Bestrade.Models.Pack
<div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <div class="well">
                <table class="table" style="width: 300px">
                    <tr>
                        <td>Purchase</td>
                        <td>@Model.purchase</td>
                    </tr>
                    <tr>
                        <td>SKU</td>
                        <td>@Model.sku</td>
                    </tr>
                    <tr>
                        <td>Cost</td>
                        <td>@Model.unit_cost</td>
                    </tr>
                    <tr>
                        <td>QTY</td>
                        <td>@Model.qty</td>
                    </tr>
                </table>
                <div>
                    Remark
                        <br />
                    <pre style="white-space: normal">
                            @Model.remark
                         </pre>
                </div>

            </div>
        </div>
    </div>
</div>
